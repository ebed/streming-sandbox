<div class="row justify-content-md-center" style="margin-top: 100px">
  <div class="col-md-6">

  {{#if message}}
    <div class="alert {{messageClass}}" role="alert">
        {{message}}
    </div>
  {{/if}}

    <form method="POST" action="/signin">
      <div class="card">
        <div class="card-header">
          <H3>Ingreso</H3>
        </div>
        <div class="card-body">

          <div class="form-group">
            <label for="exampleInputEmail1">Correo</label>
            <input name="email" type="email" class="form-control" id="Email1" placeholder="Ingresa tu correo">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input name="password" type="password" class="form-control" id="Password1" placeholder="Password">
          </div>
        </div>
        <div class="card-footer pt-3">
          <button type="submit" class="btn btn-primary">Ingresa</button>
          <a href='signup' class="btn btn-success">Registrate</a>
        </div>
      </div>
    </form>
  </div>
</div>
